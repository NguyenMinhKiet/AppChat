<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity"
    android:id="@+id/layout_Forgot_Password">

    <TextView
        android:id="@+id/FP_title"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="63dp"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_FP_Email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:autofillHints="autoFill"
        android:background="@drawable/rounded_edittext_bg"
        android:fontFamily="@font/inter_regular"
        android:hint="@string/email"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"

        app:layout_constraintTop_toBottomOf="@+id/FP_title"
        tools:ignore="RtlSymmetry"
        tools:layout_editor_absoluteX="0dp" />



    <Button
        android:id="@+id/btn_FP_sendEmailReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_email_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/text_FP_Email" />

</LinearLayout>